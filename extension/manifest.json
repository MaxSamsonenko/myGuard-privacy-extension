{
	"manifest_version": 3,
	"name": "myGuard Privacy Extension",
	"version": "1.0",
	"description": "Блокує трекери та попереджає про небезпечні сайти",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"storage",
		"declarativeNetRequest",
		"scripting",
		"activeTab"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "index.html",
		"default_icon": "icon.png"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	]
}
